<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF">

    <!-- Ảnh sách -->
    <ImageView
        android:id="@+id/ivBookImage"
        android:layout_width="48dp"
        android:layout_height="77dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tên sách -->
    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sách Mindset tâm lý học thành công - Carol Dweck"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/ivBookImage"
        app:layout_constraintStart_toEndOf="@id/ivBookImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Số lượng -->
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL: 1"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/ivBookImage"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Giá -->
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250.000đ"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toTopOf="@id/tvQuantity"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>