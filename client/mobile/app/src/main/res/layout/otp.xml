<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".activities.RegisterActivity">

    <!-- Header xanh -->
    <View
        android:id="@+id/registerHeader"
        android:layout_width="0dp"
        android:layout_height="184dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivReturn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/back"
        android:src="@drawable/arrow_back_ios_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/registerHeader"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tbtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/registerHeader" />

    <!-- Tiêu đề "Đăng ký" -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:text="@string/signup"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivReturn" />

    <!-- Phụ đề -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/subSignup"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- Form trắng -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerForm"
        android:layout_width="0dp"
        android:layout_height="710dp"
        android:background="@drawable/rounded_top"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerHeader">

        <TextView
            android:id="@+id/tvTitleOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:paddingBottom="10dp"
            android:text="Xác thực OTP"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Phụ đề -->
        <TextView
            android:id="@+id/tvSubtitleOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:text="Mã OTP đã được gửi đến email của bạn!"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleOTP" />

        <!-- Nhập mã OTP -->
        <EditText
            android:id="@+id/etOTP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <EditText
            android:id="@+id/etOTP1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/etOTP"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <EditText
            android:id="@+id/etOTP2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/etOTP1"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <EditText
            android:id="@+id/etOTP4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/etOTP3"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <EditText
            android:id="@+id/etOTP3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/etOTP2"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <EditText
            android:id="@+id/etOTP5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/light_gray"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@id/etOTP4"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleOTP" />

        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="64dp"
            android:text="Không nhận được OTP?"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etOTP" />

        <Button
            style="@style/Button.NoDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:text="Gửi lại"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tvResendOTP"
            app:layout_constraintTop_toBottomOf="@id/etOTP" />


        <Button
            android:id="@+id/btnCancel"
            style="@style/Button.NoDefault"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_border"
            android:text="Hủy"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResendOTP" />

        <Button
            android:id="@+id/btnContinue"
            style="@style/Button.NoDefault"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_fill"
            android:backgroundTint="@color/green"
            android:text="Tiếp tục"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintStart_toEndOf="@id/btnCancel"
            app:layout_constraintTop_toBottomOf="@id/tvResendOTP" />

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/policy"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>